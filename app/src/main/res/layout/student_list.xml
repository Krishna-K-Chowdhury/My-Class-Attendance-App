<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/ash_gray"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30sp"
        app:strokeWidth="2.5dp"
        app:strokeColor="@color/corner"
        app:cardUseCompatPadding="true"
        android:layout_margin="4dp"
        app:cardElevation="12dp"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/rcy_slno"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="See Details"
                    android:drawableEnd="@drawable/baseline_library_books_24"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/showDetailsTV"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:text="Show Past Records"
                    android:drawableEnd="@drawable/baseline_auto_graph_24"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/showGraphTV"/>

            </LinearLayout>

        </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="roll no.:"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/rcy_roll"/>

            <TextView
                android:id="@+id/rcy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:textColor="@color/white"
                android:id="@+id/btnPresent"
                android:background="@drawable/custom_button"
                android:ems="10"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Status"
                android:id="@+id/tvStatus"
                android:textColor="@android:color/holo_green_light"
                android:gravity="center"
                android:textStyle="italic"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>